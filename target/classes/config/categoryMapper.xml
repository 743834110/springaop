<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lingnan.mybatisdemo.mapper.CategoryMapper">



    <insert id="addCategory"  parameterType="com.lingnan.mybatisdemo.bean.Category" >
        INSERT INTO category (name) VALUES (#{name})
    </insert>
    
    <select id="findAllCategory" resultType="com.lingnan.mybatisdemo.bean.Category">
        SELECT * FROM category;
    </select>

    <update id="updateCategory" parameterType="com.lingnan.mybatisdemo.bean.Category">
        UPDATE category set name = #{name} WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE from category WHERE id = #{id}
    </delete>

    <select id="searchByName" parameterType="string" resultType="com.lingnan.mybatisdemo.bean.Category">
        SELECT * FROM category where name like '%' || #{name} || '%'
    </select>
</mapper>